<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-brand">
        <h2>{{ site_name }}</h2>
        {% if contact_info.email %}
          <p class="footer-contact">
            <svg class="icon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/>
            </svg>
            {{ contact_info.email }}
          </p>
        {% endif %}
      </div>

      {% for section in footer_links %}
        <div class="footer-section">
          <h4>{{ section.title }}</h4>
          <ul>
            {% for link in section.links %}
              <li>
                <a href="{{ link.url }}">{{ link.text }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}

      <div class="footer-social">
        <h4>Connect With Us</h4>
        <div class="social-icons">
          {% for social in social_links %}
            <a href="{{ social.url }}" target="_blank" class="social-icon" aria-label="{{ social.platform }}">
              <svg class="icon" fill="currentColor" viewBox="0 0 24 24">
                {% if social.icon == 'facebook' %}
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
                {% elseif social.icon == 'twitter' %}
                  <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
                {% elseif social.icon == 'linkedin' %}
                  <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14zm-4.5 8.25h-2.25v7.5H9.75v-7.5H7.5V9.75h2.25V8.025c0-2.04 1.275-3.15 3.075-3.15.825 0 1.6.15 1.6.15v1.8h-.9c-1.005 0-1.275.615-1.275 1.275v1.65h2.025l-.3 2.25z"/>
                {% elseif social.icon == 'instagram' %}
                  <path d="M7.8 2h8.4A5.8 5.8 0 0 1 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8A5.8 5.8 0 0 1 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2zm-.2 2A3.6 3.6 0 0 0 4 7.6v8.8A3.6 3.6 0 0 0 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6A3.6 3.6 0 0 0 16.4 4H7.6zm9.65 1.5a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/>
                {% endif %}
              </svg>
            </a>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        {{ copyright|replace({'{year}': 'now'|date('Y')}) }}
      </p>
      <div class="footer-legal-links">
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms-of-service">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
